<div class="alert alert-info">
  <a class="close" data-dismiss="alert">&#215;</a>
  <%= content_tag :div, "It is advisable to sign in as a guest user from home page with sample data shown" %>
</div>
<div class="row-fluid">
  <div class="span6 offset2">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <div class="form-inputs">
        <fieldset class="account-info">
          <legend>Sign in</legend>
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean  if devise_mapping.rememberable? %>
        </fieldset>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: "btn btn-primary", type: "button" %>
      </div>
    <% end %>    
    <%= render "devise/shared/links" %>
  </div>
  <div class="span4 omni-auth">
    <%= link_to raw('<i class="icon-facebook-sign icon-4x"></i>'), user_omniauth_authorize_path(:facebook) %>
  </div>
</div>