<%= form_tag project_team_path(@project), class: "form-horizontal" do %>  
  <div class="form-inputs">
    <div class="row-fluid">
      <div class="span6">
        <div class="email-info">
          <div class="control-group string optional">
            <%= label_tag "email_0", "Email", class: "string optional control-label"%>
            <div class="controls">
            <%= text_field_tag "email[0]", "", id: "email_0" %>
            </div>
          </div>
        </div>  
        <p><a class="new-email" href="#">Add more</a></p>
      </div>
      <div class="span6">
        <p>Invite collaborators via sending them emails</p>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag "Send Emails", class: "btn btn-primary", type: "button" %>
  </div>
<% end %>