<%= render "shared/account_header" %>
<p class='pull-right'><%= link_to raw("<i class='icon-plus-sign'></i> New project"), new_project_path %></p>
<h3><%= @project.name.upcase %></h3>
<p><%= @project.description %></p>
<%= simple_form_for @record, url: project_records_path(@project), defaults: {required: true} do |f| %>
<div class="form-inputs">
  <div class="control-group string required">
    <%= label_tag "task", raw('<abbr title="required">*</abbr> Tasks'), class: "string required control-label"%>
    <div class="controls">
    <%= select_tag "task", options_from_collection_for_select(@tasks, "id", "name") %>
    </div>
  </div>
  <%= f.input :hours %>
  <%= f.input :description %>
</div>
<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
<p><b>Tasks</b></p>
<% @tasks.each do |task| %>
<p><%= task.name %></p>
<% end %>
<p><b>Team Members</b></p>
<p><%= @leader.name %> <i class="icon-user"></i></p>
<% @members.each do |member| %>
<p><%= member.name %></p>
<% end %>
<%= form_tag project_team_path(@project) do %>
<%= label_tag "emails", 'Emails' %>
<%= text_field_tag "emails" %>
<%= button_tag "Send emails" %>
<% end %>
<div id=<%= "chartset-project-hours" %> style="width: 900px; height: 500px;"></div>
<div id=<%= "chartset-tasks-span" %> style="width: 900px; height: 500px;"></div>
<div id=<%= "chartset-tasks-hours" %> style="width: 900px; height: 500px;"></div>

