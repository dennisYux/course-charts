  <div id=<%= "chartset-"+i.to_s+"-tasks-span" %> style="width: 900px; height: 500px;"></div>
  <div id=<%= "chartset-"+i.to_s+"-tasks-hours" %> style="width: 900px; height: 500px;"></div>
<% end %>