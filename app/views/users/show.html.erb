<%= render "shared/account_header" %>
<h3>Progress</h3>
<%= link_to 'New Project', new_project_path %>
<table class="table table-condensed">
	<% @projects.in_groups_of(2, false).each do |project_array| %>
		<tr>
		<% project_array.each do |project| %>
		<td>
		  <tr><%= link_to project.name, project %></tr>
		  <tr><%= project.description %></tr>	
		</td>
		<% end %>
		</tr>
	<% end %>
</table>
